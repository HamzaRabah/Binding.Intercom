<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
	<PropertyGroup>
		<TargetFrameworks>monoandroid71;monoandroid80;monoandroid81</TargetFrameworks>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>		<AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
		<JavaOptions>$(JavaOptions) -noverify </JavaOptions>
		<TargetFrameworkIdentifier>MonoAndroid</TargetFrameworkIdentifier>
		<AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
		<OutputPath>bin/$(Configuration)/$(TargetFramework)</OutputPath>
		<DesignTimeBuild Condition="'$(GeneratePackageOnBuild)'=='true'">false</DesignTimeBuild>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>nventive.Binding.Intercom.Android.Fcm</PackageId>
		<Title>Intercom SDK Binding for Firebase</Title>
		<Description>An Android binding over Intercom SDK to support Firebase Notification</Description>
		<Authors>nventive</Authors>
		<Owners>nventive</Owners>
		<PackageIconUrl>https://nv-assets.azurewebsites.net/logos/nv_small_square_logo.jpg</PackageIconUrl>
		<PackageProjectUrl>https://github.com/nventive/Binding.Intercom</PackageProjectUrl>
		<PackageLicenseUrl>https://github.com/nventive/Binding.Intercom/blob/master/License.md</PackageLicenseUrl>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)' == 'monoandroid71'">
		<TargetFrameworkVersion>v7.1</TargetFrameworkVersion>
		<DefineConstants>$(DefineConstants);MONOANDROID7_1</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)' == 'monoandroid80'">
		<TargetFrameworkVersion>v8.0</TargetFrameworkVersion>
		<DefineConstants>$(DefineConstants);MONOANDROID8_0</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)' == 'monoandroid81'">
		<TargetFrameworkVersion>v8.1</TargetFrameworkVersion>
		<DefineConstants>$(DefineConstants);MONOANDROID8_1</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Reference Include="Mono.Android" />
		<None Include="Jars\AboutJars.txt" />
		<None Include="Additions\AboutAdditions.txt" />
		<TransformFile Include="Transforms\Metadata.xml" />
		<TransformFile Include="Transforms\EnumFields.xml" />
		<TransformFile Include="Transforms\EnumMethods.xml" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'monoandroid71'">
		<PackageReference Include="Xamarin.Android.Support.v4" Version="25.3.1" />
		<PackageReference Include="Xamarin.Firebase.Messaging" Version="42.1021.1" />
		<LibraryProjectZip Include="Jars\intercom-sdk-fcm-4.1.7.aar" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'monoandroid80'">
		<PackageReference Include="Xamarin.Android.Support.v4" Version="26.1.0.1" />
		<PackageReference Include="Xamarin.Android.Support.Design" Version="26.1.0.1" />
		<LibraryProjectZip Include="Jars\intercom-sdk-fcm-4.1.9.aar" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'monoandroid81'">
		<PackageReference Include="Xamarin.Android.Support.v4" Version="27.0.2.1" />
		<PackageReference Include="Xamarin.Android.Support.Constraint.Layout" Version="1.1.2" />
		<PackageReference Include="Xamarin.Android.Support.Design" Version="27.0.2.1" />
		<LibraryProjectZip Include="Jars\intercom-sdk-fcm-5.1.0.aar" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Binding.Intercom.Android.Base\Binding.Intercom.Android.Base.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="GitVersionTask" Version="4.0.0-beta0012">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<Import Project="$(MSBuildExtensionsPath)\Xamarin\Android\Xamarin.Android.Bindings.targets" />
</Project>